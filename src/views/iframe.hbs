<div class="iframe-wrapper">
	<div class="iframe__content">
		<div><a href="{{ iframeSrc }}" target="_blank">Open A New Tab</a></div>

		<iframe id="iFrame" src="{{ iframeSrc }}" frameborder="0"></iframe>
	</div>
</div>

<style>
	iframe,
	.iframe-wrapper,
	.iframe__content {
		display: block;
		width: 100%;
		height: 100%;
	}

	.iframe__content {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1rem 0;
	}

	.iframe__content div {
		text-align: right;
	}

	.iframe__content div a,
	.iframe__content div a:link {
		display: inline-block;
		background-color: lightslategray;
		color: #333333;
		margin-top: 1rem;
		padding: 0.5rem 1rem;
		text-decoration: none;
		border-radius: 0.5rem;
		transition: background-color 200ms linear, color 200ms linear;
		will-change: color, background-color;
	}

	.iframe__content div a:focus,
	.iframe__content div a:hover {
		background-color: #333333;
		color: lightslategray;
	}

	iframe {
		background-color: inherit;
		color: inherit;
	}

	pre {
		white-space: break-spaces;
		border-radius: 0.5rem;
	}
</style>

<script type="text/javascript">
	window.onload = function () {
		const myiFrame = document.getElementById("iFrame");
		const doc = myiFrame.contentDocument;
		const style = `<style type="text/css">
			:root{ --scrollbar-bg-color: #c3c3c3; --scrollbar-thumb-color: #e7e7e7; --scrollbar-thumb-bg-color: rgba(255, 255, 255, 0.1); --scrollbar-thumb-shadow-color: rgba(0, 0, 0, 0.25) }
			:root.dark{ --scrollbar-bg-color: #313642; --scrollbar-thumb-color: #2a2d35; --scrollbar-thumb-bg-color: rgba(255, 255, 255, 0.1); --scrollbar-thumb-shadow-color: rgba(0, 0, 0, 0.25) }
			html, body { margin: 0; border-radius: 0.5rem; font-family: -apple-system, BlinkMacSystemFont, "JetBrains Mono", "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"; }
			pre { color: inherit; font-size: 1.2rem; font-family: inherit; font-weight: 300; background: inherit; margin: 1rem; word-wrap: break-word; white-space: pre-wrap; word-break: break-all; }
			::-webkit-scrollbar,::-webkit-scrollbar-corner{ width: .5rem; height: .5rem; background-color: var(--scrollbar-bg-color) }
			::-webkit-scrollbar-thumb{ background-color: var(--scrollbar-thumb-bg-color); min-height: 60px; box-shadow: 0px 0px 5px var(--scrollbar-thumb-shadow-color) }
			::selection{ background: #00ff95; color: #fff; -webkit-text-fill-color: #333 }
			::selection{ background: #39f; color: #fff; text-shadow: none }
		</style>`;

		doc.body.innerHTML = `${style}${doc.body.innerHTML}`;
	};
</script>