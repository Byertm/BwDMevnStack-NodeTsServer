{
	"name": "bwd_admin",
	"version": "0.0.1",
	"description": "Nodejs & ExpressJs & Typescript Boilerplate",
	"main": "index.js",
	"engines": {
		"node": "18.x"
	},
	"scripts": {
		"dev": "npm run nodemon",
		"start": "set APP_ENV=production && node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config build/src/index.js",
		"start:dev": "npm run build && set APP_ENV=dev && node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --inspect build/src/index.js",
		"build": "npm run tsc",
		"tsc": "tsc",
		"build-rimraf": "rimraf build && tsc",
		"nodemon": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --exec ts-node --files src/index.ts",
		"node:watch": "set APP_ENV=dev && node src/**/*.ts --ignore node 'src/**/*.spec.ts' node -r ts-node/register/transpile-only node -r tsconfig-paths/register node -r dotenv/config --exec ts-node --files node --watch src/index.ts",
		"test": "set APP_ENV=test && jest",
		"test:watch": "set APP_ENV=test && jest --watchAll",
		"coverage": "set APP_ENV=test && jest --coverage",
		"coverage:coveralls": "set APP_ENV=test && jest -i --coverage --coverageReporters=text-lcov | coveralls",
		"test:e2e": "set APP_ENV=test && jest -c jest.integration.config.js",
		"test:e2e:watch": "set APP_ENV=test && jest -c jest.integration.config.js --watchAll",
		"test:e2e:coverage": "set APP_ENV=test && jest -c jest.integration.config.js --coverage",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"prettier": "prettier --check src/**/*.ts",
		"prettier:fix": "prettier --write src/**/*.ts"
	},
	"keywords": [
		"nodejs",
		"express",
		"mongoose",
		"typescript",
		"boilerplate"
	],
	"author": "Ersin Biltekin",
	"license": "ISC",
	"devDependencies": {
		"@types/compression": "^1.7.2",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.13",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.16",
		"@types/express-handlebars": "^6.0.0",
		"@types/express-session": "^1.17.6",
		"@types/glob": "^8.0.1",
		"@types/jest": "^29.5.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/mongoose-unique-validator": "^1.0.6",
		"@types/morgan": "^1.9.4",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.15.3",
		"@types/nodemailer": "^6.4.7",
		"@types/passport-anonymous": "^1.0.3",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.35",
		"@types/supertest": "^2.0.12",
		"@types/swagger-jsdoc": "^6.0.1",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"coveralls": "^3.1.1",
		"dotenv": "^16.0.3",
		"eslint": "^8.32.0",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.3",
		"rimraf": "^4.4.0",
		"supertest": "^6.3.3",
		"swagger-ui-express": "^4.6.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^5.0.2"
	},
	"dependencies": {
		"@ngneat/falso": "^6.4.0",
		"compression": "^1.7.4",
		"concurrently": "^7.6.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"debug": "^4.3.4",
		"express": "^4.17.1",
		"express-handlebars": "^7.0.2",
		"express-mongo-sanitize": "^2.1.0",
		"express-session": "^1.17.3",
		"express-winston": "^4.2.0",
		"helmet": "^6.0.1",
		"http-status": "^1.5.0",
		"joi": "^17.7.0",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.0.2",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.0",
		"passport": "^0.6.0",
		"passport-anonymous": "^1.0.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"serverless-http": "^3.1.1",
		"swagger-jsdoc": "^6.2.7",
		"winston": "^3.3.3",
		"xss-clean": "^0.1.1"
	}
}
