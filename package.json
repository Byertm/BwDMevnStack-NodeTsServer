{
	"name": "bwd_node_ts_server",
	"version": "0.0.1",
	"description": "Nodejs & ExpressJs & Typescript Boilerplate",
	"main": "src/index.ts",
	"engines": {
		"node": "^18.x || ^20.x || ^21.x"
	},
	"scripts": {
		"dev": "npm run nodemon",
		"start": "set APP_ENV=production && node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config build/src/index.js",
		"start:dev": "npm run build && set APP_ENV=dev && node -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --inspect build/src/index.js",
		"build": "npm run tsc",
		"tsc": "tsc",
		"build-rimraf": "rimraf build && tsc",
		"nodemon": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' -r ts-node/register/transpile-only -r tsconfig-paths/register -r dotenv/config --exec ts-node --files src/index.ts",
		"node:watch": "set APP_ENV=dev && node src/**/*.ts --ignore node 'src/**/*.spec.ts' node -r ts-node/register/transpile-only node -r tsconfig-paths/register node -r dotenv/config --exec ts-node --files node --watch src/index.ts",
		"test": "set APP_ENV=test && jest",
		"test:watch": "set APP_ENV=test && jest --watchAll",
		"coverage": "set APP_ENV=test && jest --coverage",
		"coverage:coveralls": "set APP_ENV=test && jest -i --coverage --coverageReporters=text-lcov | coveralls",
		"test:e2e": "set APP_ENV=test && jest -c jest.integration.config.js",
		"test:e2e:watch": "set APP_ENV=test && jest -c jest.integration.config.js --watchAll",
		"test:e2e:coverage": "set APP_ENV=test && jest -c jest.integration.config.js --coverage",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"prettier": "prettier --check src/**/*.ts",
		"prettier:fix": "prettier --write src/**/*.ts"
	},
	"keywords": [
		"nodejs",
		"express",
		"mongoose",
		"typescript",
		"boilerplate"
	],
	"author": "Ersin Biltekin",
	"license": "ISC",
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/debug": "^4.1.12",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.17.10",
		"@types/glob": "^8.1.0",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/mongoose-unique-validator": "^1.0.9",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.11",
		"@types/node": "^20.11.16",
		"@types/nodemailer": "^6.4.14",
		"@types/passport": "^1.0.16",
		"@types/passport-anonymous": "^1.0.5",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.2",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"coveralls": "^3.1.1",
		"dotenv": "^16.4.1",
		"eslint": "^8.56.0",
		"husky": "^9.0.10",
		"jest": "^29.7.0",
		"nodemon": "^3.0.3",
		"prettier": "^3.2.4",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.4",
		"swagger-ui-express": "^5.0.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@ngneat/falso": "^7.1.1",
		"bcrypt": "^5.1.1",
		"compression": "^1.7.4",
		"concurrently": "^8.2.2",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"debug": "^4.3.4",
		"express": "^4.18.2",
		"express-handlebars": "^7.1.2",
		"express-mongo-sanitize": "^2.2.0",
		"express-session": "^1.18.0",
		"express-winston": "^4.2.0",
		"helmet": "^7.1.0",
		"http-status": "^1.7.3",
		"joi": "^17.12.1",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.1.1",
		"morgan": "^1.10.0",
		"multer": "1.4.5-lts.1",
		"nodemailer": "^6.9.9",
		"passport": "^0.7.0",
		"passport-anonymous": "^1.0.1",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"serverless-http": "^3.2.0",
		"swagger-jsdoc": "^6.2.8",
		"winston": "^3.11.0"
	}
}